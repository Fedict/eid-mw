	APP_BINS =  $(DLGSRV).app/Contents/MacOS/$(DLGSRV)
endif
#       $(CARDLAYERTOOL)/Contents/MacOS/$(CARDLAYERTOOL)


## prepends 'bin/' to all the elements of BASE_BINS
BINS = $(APP_BINS:%= bin/%) 

