                            <ColumnDefinition Width="300*"/>
                            <ColumnDefinition Width="200*"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Column="0" x:Name="checkBox" Margin="0,0,10,0" Content="{Binding Path=certificateTabResource.AlwaysValidateCheckboxLabel, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Source={StaticResource LocalizedStrings }}" HorizontalAlignment="Right" VerticalAlignment="Center" IsChecked="{Binding Path=validateAlways, Mode=TwoWay}" />
