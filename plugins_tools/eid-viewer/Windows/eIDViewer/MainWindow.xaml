                        <TreeView ItemsSource="{Binding Path=certsList, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,-91,0">
                            <TreeView.ItemContainerStyle>
                                <Style TargetType="{x:Type TreeViewItem}">
                                    <Setter Property="IsExpanded" Value="True"/>
                                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                                    <Setter Property="Visibility" Value="{Binding CertVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <Setter Property="FontWeight" Value="Normal"/>
                                    <Setter Property="ContextMenu">
                                        <Setter.Value>
                                            <ContextMenu>
                                                <MenuItem Header="{Binding Path=certificateTabResource.Detailed_Information, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Source={StaticResource LocalizedStrings }}" Command="{Binding DetailInfoCommand}"/>
                                                <Separator/>
                                                <MenuItem Header="{Binding Path=certificateTabResource.Export_DER, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Source={StaticResource LocalizedStrings }}" Command="{Binding SaveCommand}"/>
                                            </ContextMenu>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TreeView.ItemContainerStyle>
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Path=Certs, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" DataType="x:Type viewer:ICerts">
                                    <StackPanel Orientation="Horizontal" Margin="2">
                                        <Image Source="{Binding Path=ImagePath}" Width="16" Height="16" SnapsToDevicePixels="True"/>
                                        <TextBlock Text="{Binding Path=CertLabel, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" GotFocus="TextBlockCertificate_GotFocus"/>
                                    </StackPanel>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
