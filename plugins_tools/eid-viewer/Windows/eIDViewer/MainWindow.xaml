                    <MenuItem.ItemTemplate>
                        <DataTemplate>
                            <MenuItem  Header="{Binding Path=readerName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" IsCheckable="true" Click="CardReaderMenuItem_Click" />
                        </DataTemplate>
                    </MenuItem.ItemTemplate>
                </MenuItem>
                <Separator/>
                <MenuItem Header="{Binding Path=menuItemResource.fileMenuPrintItem, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Source={StaticResource LocalizedStrings }}" InputGestureText="Ctrl+P" Click="MenuItemPrint_Click" IsEnabled="{Binding Path=eid_data_ready, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                <Separator/>
                <MenuItem Header="{Binding Path=menuItemResource.fileMenuQuitItem, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Source={StaticResource LocalizedStrings }}" InputGestureText="Ctrl+Q" Click="ExitMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="{Binding Path=applicationResource.languageMenuTitle, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Source={StaticResource LocalizedStrings }}">
                <MenuItem Header="Deutch" IsCheckable="true" IsChecked="{Binding Path=languageDE, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" InputGestureText="Ctrl+D" Click="Deutch_Click"/>
                <MenuItem Header="English" IsCheckable="true" IsChecked="{Binding Path=languageEN, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" InputGestureText="Ctrl+E" Click="English_Click"/>
                <MenuItem Header="Français" IsCheckable="true" IsChecked="{Binding Path=languageFR, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" InputGestureText="Ctrl+F" Click="French_Click"/>
                <MenuItem Header="Nederlands" IsCheckable="true" IsChecked="{Binding Path=languageNL, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" InputGestureText="Ctrl+N" Click="Nederlands_Click"/>
            </MenuItem>
            <MenuItem Header="{Binding Path=applicationResource.helpMenuTitle, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Source={StaticResource LocalizedStrings }}">
                <MenuItem Header="{Binding Path=applicationResource.ABOUT, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Source={StaticResource LocalizedStrings }}" Click="AboutMenuItem_Click"/>
                <Separator/>
                <MenuItem Header="{Binding Path=menuItemResource.fileMenuFAQItem, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Source={StaticResource LocalizedStrings }}" Click="FAQMenuItem_Click"/>
                <Separator/>
                <MenuItem Header="{Binding Path=menuItemResource.fileMenuTestSiteItem, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Source={StaticResource LocalizedStrings }}" Click="TestSiteMenu_Click" />
            </MenuItem>
        </Menu>
        <Grid Height="55" Margin="0,0,10,0" VerticalAlignment="Bottom" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"  />
                <ColumnDefinition Width="Auto" MinWidth="300" />
                <ColumnDefinition Width="*" MinWidth="80"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Style="{DynamicResource ImageButton}" IsEnabled="{Binding Path=eid_data_ready, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" AutomationProperties.Name="{Binding Path=menuItemResource.fileMenuPrintItem, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Source={StaticResource LocalizedStrings }}" Click="MenuItemPrint_Click" >
                <Image  HorizontalAlignment="Left" Height="55" VerticalAlignment="Top" Width="100" Source="Resources/Images/print.png" />
            </Button>
            <Label Grid.Column="1" Content="{Binding Path=progress_info, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource DataLabel}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            <Image Grid.Column="2" HorizontalAlignment="Right" Height="55" Margin="0,0,0,0" VerticalAlignment="Top" Width="80" Source="{Binding Path=cardreader_icon, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>
        <ProgressBar Value="{Binding Path=progress, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Name="sbar" Minimum="0" Maximum="100" Height="10" VerticalAlignment="Bottom" UseLayoutRounding="True" Visibility="{Binding Path=progress_bar_visible, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</Window>
